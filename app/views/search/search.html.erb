<div class="container">
  <div class="page-header">
    <h1>
      Search Results</h1>
  </div>

  <div class="row">
    <div class="span12">
        <% @pages.results.each do |page| %>
            <p><%= link_to CGI::unescape(page['url']) %></p>
            <p><%= page['content'][0..100]%></p>
        <% end %>
    </div>
  </div>
</div>
