<div class="container">
  <div class="page-header">
    <h1>
      Search Results</h1>
  </div>

  <div class="row">
    <div class="span12">
      <table class="table table-bordered">
        <thead>
        <tr>
          <th>
            Name
          </th>
        </tr>
        </thead>
        <tbody>

        <% @pages.results.each do |page| %>
            <tr>
              <td><%= CGI::unescape(page['url']) %></td>
            </tr>
			<tr>
              <td><%= page['content'][0..100]%></td>
            </tr>
        <% end %>
        </tbody>
      </table>

    </div>
  </div>
</div>
